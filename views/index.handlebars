<article>
  <div class="jumbotron">
    <div class="container spaces">
      <div class="d-flex justify-content-end">
        <a href="/scrape">
          <button type="button" class="scrape-btn btn btn-info">Scrape Cracked</button>
        </a>
        <button type="button" class="deleteArticles-btn btn btn-danger">Delete All</button>
      </div>

    </div>
  </div>
</article>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      {{#unless blogs}}
      <article class="alert alert-danger">
        <h1 class="p-3">
          Looks like you haven't scraped the web yet.
        </h1>
        <h2 class="p-3 mb3">
          Scrape Craked by clicking the button "Scrape Cracked"
        </h2>
      </article>
      {{/unless}}

      {{#if blogs}} 
      <div class="wrapper">
      {{#each blogs}}
      <div  class="card mb-4 content-item">
        <div class="row no-gutters">
          <div class="col-md-4">
            <a href={{this.link}}>
              <img src="{{this.image}}" class="card-img" alt="..." />
            </a>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <a href={{this.link}}>
                <h5 class="card-title">{{this.title}}</h5>
              </a>
              <p class="card-text"> {{this.description}}</p>
             <button data-id = {{this._id}} type="button" class="comment-btn btn btn-info">See Comments</button>
             <button data-id = {{this._id}} type="button" class="write-btn btn btn-info">Write Comment</button>
             <button data-id = {{this._id}} type="button" class="btn btn-warning"> <i class="fas fa-save"></i></button>
            </div>
          </div>
        </div>

      </div>

      {{/each}} 
      </div>
      {{/if}}
    </div>
      <div class="col-lg-4">
        <header class="text-center">
           <h6 class="comment-title">Comments for Article</h6>
           <div class="comment-section">
             
           </div>
        </header>
        <article>
        </article>

      </div>
  </div>
</div>