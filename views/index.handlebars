<article>
    <div class="jumbotron">
     <div class="container spaces">
         <div class="d-flex justify-content-end">
         <a href= "/scrape"><button type="button" class="scrape-btn btn btn-info">Scrape Cracked</button></a>
         <button type="button" class="json-btn btn btn-info">Cracked JSON</button>
         </div>

     </div>
    </div>
</article>

  {{#unless blogs}}
    <article class="alert alert-danger">
        <h1 class="p-3">
        Looks like you haven't scraped the web yet.
        </h1>
        <h2 class="p-3 mb3">
        Scrape Craked by clicking the button "Scrape Cracked"
        </h2>
    </article>
  {{/unless}}

{{#if blogs}}
{{#each blogs}}
<div class="card mb-3" style="max-width: 740px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.image}}" class="card-img" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text"> {{this.description}}</p>
      </div>
    </div>
  </div>
</div>

{{/each}}
{{/if}}